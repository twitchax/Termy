{
    "compilerOptions": {
        "rootDir": "Client",
        "outDir": "buildts",
        "target":"esnext",
        "module":"esnext",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": true,
        "pretty": true,
        "strict": true,

        "lib": [
            "esnext",
            "dom"
        ]
    },

    "include": [
        "Client/**/*.ts"
    ]
}